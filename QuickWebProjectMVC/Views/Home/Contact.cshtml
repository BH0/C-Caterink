@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>

<h3>@ViewBag.Message</h3>
<div class="contact-form"> 
    <form method="post">
        <div class="form-group">
            <label for="nameInput">Your Name</label>
            <input type="text" name="name" class="form-control offset-3" id="nameInput" aria-describedby="nameHelp" placeholder="Your name here....">
        </div>
        <div class="form-group">
            <label for="inputEmail">Your Email</label>
            <input type="email" name="email" class="form-control offset-3" id="emailInput" placeholder="Your email...">
        </div>
        <div class="form-group">
            <label for="message">Your message</label>
            <textarea class="form-control offset-3" rows="3" columns="4" id="comment"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form> 
</div> 